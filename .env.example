# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/body_recomp

# Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Configuration
DEBUG=True
API_V1_PREFIX=/api/v1

# CORS Configuration
# Aceita três formatos:
# 1. String única: ALLOWED_ORIGINS=https://example.com
# 2. Separado por vírgula: ALLOWED_ORIGINS=https://example.com,https://app.com
# 3. JSON array: ALLOWED_ORIGINS=["https://example.com","https://app.com"]
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# PostgreSQL Configuration (for docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=body_recomp
