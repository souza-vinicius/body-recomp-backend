/**
 * Dashboard Screen
 * Home screen providing at-a-glance view of current goal status,
 * latest metrics, and progress visualization
 */

import React, { useState } from 'react';
import {
  ScrollView,
  StyleSheet,
  RefreshControl,
  ActivityIndicator,
  View,
  Text,
  TouchableOpacity,
  Dimensions,
} from 'react-native';
import { useRouter } from 'expo-router';

import { useGoals } from '../../src/hooks/useGoals';
import { useProgressSummary, useProgressTrend } from '../../src/hooks/useProgress';
import { useMeasurements } from '../../src/hooks/useMeasurements';

const { width } = Dimensions.get('window');

export default function DashboardScreen() {
  const [refreshing, setRefreshing] = useState(false);
  const router = useRouter();

  // Get active goal and progress data
  const { activeGoal, isLoading: goalsLoading, refetchActiveGoal } = useGoals();
  
  const {
    data: progressSummary,
    isLoading: summaryLoading,
    refetch: refetchSummary,
  } = useProgressSummary(activeGoal?.id || '', !!activeGoal);

  const {
    data: progressTrend,
    isLoading: trendLoading,
    refetch: refetchTrend,
  } = useProgressTrend(activeGoal?.id || '', !!activeGoal);

  const {
    latestMeasurement,
    isLoadingMeasurements: measurementsLoading,
    refetch: refetchMeasurements,
  } = useMeasurements();

  const onRefresh = async () => {
    setRefreshing(true);
    await Promise.all([
      refetchActiveGoal(),
      refetchSummary(),
      refetchTrend(),
      refetchMeasurements(),
    ]);
    setRefreshing(false);
  };

  // Calculate days remaining
  const getDaysRemaining = () => {
    if (!activeGoal?.endDate) return null;
    const today = new Date();
    const end = new Date(activeGoal.endDate);
    const diffTime = end.getTime() - today.getTime();
    const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
    return diffDays;
  };

  // Get motivational message based on status
  const getMotivationalMessage = () => {
    if (!progressSummary) return null;

    switch (progressSummary.status) {
      case 'ahead':
        return {
          text: "ðŸŽ¯ You're ahead of schedule! Keep up the excellent work!",
          color: '#3B82F6',
        };
      case 'on-track':
        return {
          text: 'âœ¨ Right on track! Your consistency is paying off.',
          color: '#10B981',
        };
      case 'behind':
        return {
          text: "ðŸ’ª Don't give up! Small steps forward are still progress.",
          color: '#EF4444',
        };
      default:
        return null;
    }
  };

  const motivationalMessage = getMotivationalMessage();
  const daysRemaining = getDaysRemaining();

  // Loading state
  if (goalsLoading) {
    return (
      <Box style={styles.container} justifyContent="center" alignItems="center">
        <ActivityIndicator size="large" color="#3B82F6" />
        <Text style={styles.loadingText}>Loading dashboard...</Text>
      </Box>
    );
  }

  // No active goal state
  if (!activeGoal) {
    return (
      <ScrollView
        style={styles.container}
        refreshControl={<RefreshControl refreshing={refreshing} onRefresh={onRefresh} />}
      >
        <Box padding={16}>
          <VStack gap={24} marginTop={40}>
            <Box alignItems="center">
              <Heading style={styles.emptyTitle}>Welcome to Body Recomp!</Heading>
              <Text style={styles.emptySubtitle}>
                Start your transformation journey
              </Text>
            </Box>

            <Box style={styles.emptyCard}>
              <VStack gap={16}>
                <Text style={styles.emptyCardTitle}>Get Started</Text>
                <Text style={styles.emptyCardText}>
                  To begin tracking your progress, you'll need to:
                </Text>
                <VStack gap={12}>
                  <HStack gap={12} alignItems="flex-start">
                    <Text style={styles.stepNumber}>1</Text>
                    <Text style={styles.stepText}>
                      Complete your initial body measurements
                    </Text>
                  </HStack>
                  <HStack gap={12} alignItems="flex-start">
                    <Text style={styles.stepNumber}>2</Text>
                    <Text style={styles.stepText}>
                      Create your first goal (cutting or bulking)
                    </Text>
                  </HStack>
                  <HStack gap={12} alignItems="flex-start">
                    <Text style={styles.stepNumber}>3</Text>
                    <Text style={styles.stepText}>
                      Log progress weekly to track your journey
                    </Text>
                  </HStack>
                </VStack>
              </VStack>
            </Box>

            <VStack gap={12}>
              <Button onPress={() => router.push('/measurements')} style={styles.actionButton}>
                <ButtonText>Record Measurements</ButtonText>
              </Button>
              <Button
                onPress={() => router.push('/goals')}
                style={styles.actionButtonOutline}
              >
                <ButtonText>Create Goal</ButtonText>
              </Button>
            </VStack>
          </VStack>
        </Box>
      </ScrollView>
    );
  }

  // Main dashboard with active goal
  return (
    <ScrollView
      style={styles.container}
      refreshControl={<RefreshControl refreshing={refreshing} onRefresh={onRefresh} />}
    >
      <Box padding={16}>
        <VStack gap={16}>
          {/* Header */}
          <Box>
            <Heading style={styles.header}>Dashboard</Heading>
            <Text style={styles.subheader}>Track your transformation</Text>
          </Box>

          {/* Active Goal Card */}
          <Box style={styles.card}>
            <VStack gap={16}>
              <HStack justifyContent="space-between" alignItems="center">
                <Text style={styles.cardTitle}>Current Goal</Text>
                <Box style={[styles.badge, styles[`badge_${activeGoal.type}`]]}>
                  <Text style={styles.badgeText}>
                    {activeGoal.type === 'CUTTING' ? 'Cutting' : 'Bulking'}
                  </Text>
                </Box>
              </HStack>

              {/* Goal Details */}
              <VStack gap={12}>
                <HStack justifyContent="space-between">
                  <Text style={styles.label}>Current Body Fat</Text>
                  <Text style={styles.value}>
                    {progressSummary?.currentBodyFat.toFixed(1) || 'â€”'}%
                  </Text>
                </HStack>
                <HStack justifyContent="space-between">
                  <Text style={styles.label}>
                    {activeGoal.type === 'BULKING' ? 'Body Fat Ceiling' : 'Target Body Fat'}
                  </Text>
                  <Text style={styles.value}>{activeGoal.targetBodyFat.toFixed(1)}%</Text>
                </HStack>
                <HStack justifyContent="space-between">
                  <Text style={styles.label}>Status</Text>
                  <Text
                    style={[
                      styles.value,
                      {
                        color:
                          progressSummary?.status === 'on-track'
                            ? '#10B981'
                            : progressSummary?.status === 'ahead'
                            ? '#3B82F6'
                            : '#EF4444',
                      },
                    ]}
                  >
                    {progressSummary?.status?.replace('-', ' ').toUpperCase() || 'â€”'}
                  </Text>
                </HStack>
              </VStack>

              {/* Progress Bar */}
              {progressSummary && (
                <Box>
                  <HStack justifyContent="space-between" marginBottom={8}>
                    <Text style={styles.progressLabel}>Progress</Text>
                    <Text style={styles.progressValue}>
                      {progressSummary.progressPercentage.toFixed(0)}%
                    </Text>
                  </HStack>
                  <Progress value={progressSummary.progressPercentage} style={styles.progress}>
                    <ProgressFilledTrack style={styles.progressBar} />
                  </Progress>
                </Box>
              )}

              {/* Timeline */}
              {daysRemaining !== null && (
                <Box style={styles.timelineBox}>
                  <HStack justifyContent="space-between" alignItems="center">
                    <VStack gap={4}>
                      <Text style={styles.timelineLabel}>Days Remaining</Text>
                      <Text style={styles.timelineValue}>{daysRemaining} days</Text>
                    </VStack>
                    <VStack gap={4} alignItems="flex-end">
                      <Text style={styles.timelineLabel}>Target Date</Text>
                      <Text style={styles.timelineValue}>
                        {new Date(activeGoal.endDate).toLocaleDateString()}
                      </Text>
                    </VStack>
                  </HStack>
                </Box>
              )}
            </VStack>
          </Box>

          {/* Motivational Message */}
          {motivationalMessage && (
            <Box style={[styles.messageCard, { borderLeftColor: motivationalMessage.color }]}>
              <Text style={styles.messageText}>{motivationalMessage.text}</Text>
            </Box>
          )}

          {/* Body Fat Trend Chart */}
          {progressTrend && progressTrend.chartData.dates.length > 0 && (
            <Box style={styles.card}>
              <Text style={styles.cardTitle}>Body Fat Trend</Text>
              <Box marginTop={12}>
                <ProgressChart
                  dates={progressTrend.chartData.dates}
                  bodyFatPercentages={progressTrend.chartData.bodyFatPercentages}
                  targetLine={progressTrend.chartData.targetLine}
                  trendLine={progressTrend.chartData.trendLine}
                />
              </Box>
            </Box>
          )}

          {/* Latest Measurement */}
          {latestMeasurement && (
            <Box style={styles.card}>
              <Text style={styles.cardTitle}>Latest Measurement</Text>
              <VStack gap={12} marginTop={12}>
                <HStack justifyContent="space-between">
                  <Text style={styles.label}>Date</Text>
                  <Text style={styles.value}>
                    {new Date(latestMeasurement.date).toLocaleDateString()}
                  </Text>
                </HStack>
                <HStack justifyContent="space-between">
                  <Text style={styles.label}>Weight</Text>
                  <Text style={styles.value}>{latestMeasurement.weight.toFixed(1)} kg</Text>
                </HStack>
                <HStack justifyContent="space-between">
                  <Text style={styles.label}>Body Fat</Text>
                  <Text style={styles.value}>
                    {latestMeasurement.bodyFat.toFixed(1)}%
                  </Text>
                </HStack>
              </VStack>
            </Box>
          )}

          {/* Quick Actions */}
          <Box style={styles.card}>
            <Text style={styles.cardTitle}>Quick Actions</Text>
            <VStack gap={12} marginTop={12}>
              <Button
                onPress={() => router.push('/progress')}
                style={styles.quickActionButton}
              >
                <ButtonText>Log Progress</ButtonText>
              </Button>
              {/* Plans feature coming in Phase 9 */}
              {/* <Button
                onPress={() => router.push('/plans')}
                style={styles.quickActionButtonOutline}
              >
                <ButtonText>View Training Plans</ButtonText>
              </Button> */}
            </VStack>
          </Box>
        </VStack>
      </Box>
    </ScrollView>
  );
}

